<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form class="field form-group">
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label"<%= form.label :first_name, style: "display: block" %></label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="First Name"<%= form.text_field :first_name %>
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label"<%= form.label :last_name, style: "display: block" %></label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Last Name"<%= form.text_field :last_name %>
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label" <%= form.label :email, style: "display: block" %></label>
      <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Email Id"<%= form.text_field :email %>
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label"<%= form.label :phone, style: "display: block" %></label>
      <input type="phone" class="form-control" id="exampleFormControlInput1" placeholder="Phone"<%= form.text_field :phone %>
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label"<%= form.label :twitter, style: "display: block" %></label>
      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="@twitter"<%= form.text_field :twitter %>
      <%= form.number_field :user_id, id: :friend_user_id, value: current_user.id, type: :hidden %>
    </div>
    
    <%= form.submit %>
  </form>
<% end %>
